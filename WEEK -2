/coomparisons and shifts
#include<stdio.h>
void sort(int a[20],int n,int *c,int *s)
{
  int i,j,key;
  for(i=1;i<n;i++)
  {
    a[i] = key;
    j =i-1;
  }
  while(j>=0 && a[j]>key)
  {
    a[j+1] = a[j];
    j=j-1;
    (*c++);
    (*s++);
  }

  a[j] = key;
  (*s++);
  }

int main()
{
  int a[20],n,i;
  int *c,*s;
  printf("enter n the size of array");
  scanf("%d",&n);
  for(i=0;i<n;i++)
  {
    printf("\nelements:");
    scanf("%d",&a[i]);
  }
  sort(int a[20],n,*c,*s);
  printf("\nsorted array\n");
  for(i=0;i<n;i++)
  {
    printf("\n%d",a[i]);
  }
  printf("\nnumber of comparisions = %d",*c);
  printf("\nnumber of shifts =%d",*s);
}
